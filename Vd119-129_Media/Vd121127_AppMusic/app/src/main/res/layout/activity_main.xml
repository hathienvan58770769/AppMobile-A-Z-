<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroung_anh_trang">

    <TextView
        android:id="@+id/textViewNameBH"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="13dp"
        android:text="Name Song"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/imageButtonChevron"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/left_chevron" />

    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/seekBar"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/imageButtonStop"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/right_chevron" />

    <ImageButton
        android:id="@+id/imageButtonPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/seekBar"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/imageButtonChevron"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/play_button" />

    <ImageButton
        android:id="@+id/imageButtonStop"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/seekBar"
        android:layout_marginStart="35dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/imageButtonPlay"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/stop_button" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/imageViewAudio"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameBH"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="246dp"
        android:text="00:00"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNameBH"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="27dp"
        android:text="00:00"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageViewAudio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textViewNameBH"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/audio" />
</RelativeLayout>